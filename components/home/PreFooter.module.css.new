/* ===================================
   Pre-Footer - The Sanctuary Invitation
   Dark, Moody, Intimate
   =================================== */

.preFooter {
  background: #05110E;
  padding: 7rem 1.5rem;
  position: relative;
  overflow: hidden;
}

@media (min-width: 1024px) {
  .preFooter {
    padding: 10rem 2rem;
  }
}

/* Ambient Glow Effect */
.ambientGlow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 80%;
  background: radial-gradient(
    ellipse at center,
    rgba(200, 155, 123, 0.06) 0%,
    transparent 60%
  );
  pointer-events: none;
}

.container {
  max-width: 700px;
  margin: 0 auto;
  text-align: center;
  position: relative;
  z-index: 1;
}

/* Decorative Top Element */
.decorTop {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1.25rem;
  margin-bottom: 2.5rem;
}

.decorLine {
  width: 4rem;
  height: 1px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(200, 155, 123, 0.4) 100%
  );
}

.decorTop .decorLine:last-child {
  background: linear-gradient(
    90deg,
    rgba(200, 155, 123, 0.4) 0%,
    transparent 100%
  );
}

.decorIcon {
  width: 20px;
  height: 20px;
  color: var(--brushed-copper);
  opacity: 0.7;
}

/* Heading - Sanctuary */
.heading {
  font-family: var(--font-playfair), serif;
  font-size: 2.5rem;
  font-weight: 500;
  color: var(--text-light);
  margin-bottom: 1rem;
  letter-spacing: -0.02em;
}

@media (min-width: 768px) {
  .heading {
    font-size: 3.5rem;
  }
}

/* Subtitle */
.subtitle {
  font-family: var(--font-manrope), sans-serif;
  font-size: 1.0625rem;
  color: rgba(245, 245, 245, 0.5);
  margin-bottom: 3.5rem;
  max-width: 400px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.7;
}

/* Contact Box - Bordered */
.contactBox {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(200, 155, 123, 0.15);
  border-radius: 1rem;
  padding: 2rem;
  margin-bottom: 2.5rem;
  transition: all 0.3s ease;
}

.contactBox:hover {
  border-color: rgba(200, 155, 123, 0.3);
  background: rgba(255, 255, 255, 0.03);
}

.contactRow {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  align-items: center;
}

@media (min-width: 640px) {
  .contactRow {
    flex-direction: row;
    justify-content: center;
    gap: 0;
  }
}

.contactDivider {
  display: none;
}

@media (min-width: 640px) {
  .contactDivider {
    display: block;
    width: 1px;
    height: 50px;
    background: rgba(200, 155, 123, 0.2);
    margin: 0 3rem;
  }
}

.contactItem {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.contactItemIcon {
  width: 20px;
  height: 20px;
  color: var(--brushed-copper);
  opacity: 0.8;
}

.contactItemContent {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 0.25rem;
}

.contactItemLabel {
  font-family: var(--font-manrope), sans-serif;
  font-size: 0.6875rem;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  color: rgba(245, 245, 245, 0.4);
}

.contactItemValue {
  font-family: var(--font-manrope), sans-serif;
  font-size: 1rem;
  font-weight: 500;
  color: var(--brushed-copper);
  text-decoration: none;
  transition: all 0.3s ease;
}

.contactItemValue:hover {
  color: #d4a98a;
}

/* CTA Button - Glowing */
.ctaButton {
  position: relative;
  display: inline-block;
  padding: 1.25rem 3rem;
  background: var(--brushed-copper);
  color: #05110E;
  font-family: var(--font-manrope), sans-serif;
  font-size: 0.875rem;
  font-weight: 600;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  border: none;
  border-radius: 0.5rem;
  cursor: pointer;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.ctaButton:hover {
  transform: translateY(-3px);
  box-shadow: 
    0 20px 40px rgba(200, 155, 123, 0.3),
    0 0 60px rgba(200, 155, 123, 0.2);
}

.ctaText {
  position: relative;
  z-index: 1;
}

.ctaGlow {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.2) 0%,
    transparent 50%
  );
  opacity: 0;
  transition: opacity 0.4s ease;
}

.ctaButton:hover .ctaGlow {
  opacity: 1;
}

/* Bottom Decoration */
.decorBottom {
  margin-top: 5rem;
  padding-top: 2.5rem;
  border-top: 1px solid rgba(200, 155, 123, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.375rem;
}

.brandName {
  font-family: var(--font-playfair), serif;
  font-size: 1.375rem;
  letter-spacing: 0.35em;
  color: var(--brushed-copper);
  opacity: 0.8;
}

.tagline {
  font-family: var(--font-manrope), sans-serif;
  font-size: 0.6875rem;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  color: rgba(245, 245, 245, 0.3);
}
